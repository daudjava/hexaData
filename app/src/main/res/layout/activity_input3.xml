<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_containerbiji"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewInven"
        android:layout_marginBottom="100dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Kode Input : "
                        android:id="@+id/textView19"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Jenis Kopi : "
                        android:id="@+id/textView21"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Jumlah :"
                        android:id="@+id/textView22"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Status :"
                        android:id="@+id/textView24"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Keterangan :"
                        android:id="@+id/textView7"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Harga :"
                        android:id="@+id/textView25"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Total"
                        android:id="@+id/total_label"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.52">

                    <EditText
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/kdbiji_txt"
                        android:editable="false"
                        android:layout_marginRight="20dp"
                      />

                    <Spinner
                        android:id="@+id/jnsbiji_txt"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                          android:layout_marginRight="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="3dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="144dp"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/jmlbiji_txt"

                            android:inputType="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text=" / kg"
                            android:id="@+id/textView4"
                            android:layout_marginRight="20dp"/>

                    </LinearLayout>

                    <Spinner
                        android:id="@+id/pilihbiji_txt"
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="3dp" />

                    <EditText
                        android:layout_width="166dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ketbiji_txt"
                        android:layout_marginRight="20dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_height="match_parent"
                        android:id="@+id/beli_ln"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Rp."
                            android:id="@+id/textView26"
                            android:visibility="gone" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/blbiji_txt"
                            android:inputType="number"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="/kg"
                            android:id="@+id/textView5"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:id="@+id/beli_ln2"
                        android:visibility="gone">

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/totalbiji_txt"
                            android:textStyle="bold"
                           android:enabled="false"
                           />

                        <TextView
                            android:layout_width="57dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="rupiah"
                            android:id="@+id/textView3"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText18"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INPUT"
                android:id="@+id/btnInput"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:id="@+id/btnAdd"
                android:text="Add Image"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="152dp"
                    android:layout_height="82dp"
                    android:src="@drawable/ic_add"
                    android:layout_weight="1.05" />
            </LinearLayout>

        </LinearLayout>


</LinearLayout>
    </ScrollView>



</android.support.v4.widget.SwipeRefreshLayout>